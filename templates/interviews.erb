---
layout: default
---

<h2><% if @category %><%= @site.categories[@category].name %><% else %>Interviews<% end %></h2>
<p>There <%if @pagination[:item_count] > 1 %>are<% else %>is<% end %> currently <%= @pagination[:item_count] %> interview<%if @pagination[:item_count] > 1 %>s<% end %><% if @category %> in this category<% end %>.</p>

<% @items.each do |interview| %>
<article class="interviewee h-card">
  <%= render_template('shared.interview', interview: interview) %>
</article>
<% end %>

<% if @pagination[:page_count] > 1 %>
  <nav id="paginator">
  Page <strong><%= @pagination[:current_page] %></strong> of <strong><%= @pagination[:page_count] %></strong> (<%= @pagination[:item_count] %> interview<% if @pagination[:item_count] > 1 %>s<% end %>):
  <% if @pagination[:previous_page] %><a href="<%= @pagination[:links][:previous_page] %>" title="Page <%= @pagination[:previous_page] %> of the interviews." id="previous">Previous</a><% else %><span id="previous">Previous</span><% end %>
  /
  <% if @pagination[:next_page] %><a href="<%= @pagination[:links][:next_page] %>" title="Page <%= @pagination[:next_page] %> of the interviews." id="next">Next</a><% else %><span id="next">Next</span><% end %>
  </nav>
<% end %>