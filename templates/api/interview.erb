{
  "interview": {
    <%= render_template('api.shared.interview', interview: @interview) %>,
    "contents": <%= @interview.contents.to_json %>,
    "gear": {
      "hardware": [
        <% @interview.hardware.each do |ware| %>
        {
          <%= render_template('api.shared.ware', ware: ware) %>
        }<%= ',' unless ware == @interview.hardware.last %>
        <% end %>
      ],
      "software": [
        <% @interview.software.each do |ware| %>
        {
          <%= render_template('api.shared.ware', ware: ware) %>
        }<%= ',' unless ware == @interview.software.last %>
        <% end %>
      ]
    }
  }
}