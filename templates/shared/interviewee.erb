<% unless selected %><a href="<%= interview.url %>" title="An interview with <%= interview.title %>." class="u-url"><% end %>
  <figure>
    <img src="/images/interviews/<%= interview.slug %>/portrait.jpg" width="500" height="335" class="portrait u-photo" alt="A picture of <%= interview.title %>">
    <% if selected && interview.credits %>
      <figcaption>Image by <% if interview.credits.url %><a href="<%= interview.credits.url %>" title="More details about <%= interview.credits.name %>."><%= interview.credits.name %></a><% else %><%= interview.credits.name %><% end %><% if interview.credits.licence %> (<a href="http://creativecommons.org/licenses/<%= interview.credits.licence %>/4.0/" title="The <%= interview.credits.licence.upcase %> Creative Commons licence."><%= interview.credits.licence.upcase %></a>)<% end %>.</figcaption>
    <% end %>
  </figure>
<% if selected %>
  <h2 class="p-name"><%= interview.title %></h2>
<% else %>
  <h3><%= interview.title %></h3>
<% end %>
<% unless selected %></a><% end %>
<p class="summary p-job-title"><%= interview.summary %></p>
<p class="details">
  Posted <time datetime="<%= interview.date.strftime('%Y-%m-%d') %>" class="dt-published"><a href="/archives/<%= interview.date.year %>/<%= interview.date.strftime('%m') %>/" title="All interviews from <%= interview.date.strftime('%B, %Y') %>."><%= interview.date.strftime('%B %d') %></a>, <a href="/archives/<%= interview.date.year %>/" title="All interviews from <%= interview.date.year %>."><%= interview.date.strftime('%Y') %></a></time> in 
  <% interview.categories.each do |slug| %>
    <a href="/categories/<%= slug %>/" title="All the <%= @site.categories[slug.to_sym].name %> interviews." class="p-category"><%= slug %></a><%= ', ' unless interview.categories.last == slug %>
  <% end %>
</p>
